
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to any file. For a production app, you'll likely want to
    // restrict this to only the files a user is allowed to see.
    match /{allPaths=**} {
      allow read;
    }

    // Rules for prescription images and PDFs
    match /prescriptions/{recipeId} {
      // Allow authenticated users to upload images and PDFs up to 5MB.
      allow write: if request.auth != null &&
                      (request.resource.contentType.matches('image/.*') ||
                       request.resource.contentType == 'application/pdf') &&
                      request.resource.size < 5 * 1024 * 1024;
    }
  }
}
